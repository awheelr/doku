<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= title %></title>

    <%- include("../partials/manifest.ejs") %>

    <link href="/assets/css/style.css" rel="stylesheet">
    <script src="/assets/js/jquery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>

</head>
<body>

    <%- include("../partials/header") %>

    <div class="preview">
        <div class="container">
            <span class="title">Preview</span>

            <div class="actions" id="preview">
                <div class="buttons long">
                    <div class="button">
                        <div class="left">
                            <div class="icon prescription">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512"><path d="M285.66 312.97c3.12-3.12 3.12-8.19 0-11.31l-11.31-11.31c-3.12-3.12-8.19-3.12-11.31 0L224 329.37l-31.33-31.33C211.17 288.9 224 270.03 224 248c0-30.93-25.07-56-56-56h-64c-4.42 0-8 3.58-8 8v144c0 4.42 3.58 8 8 8h16c4.42 0 8-3.58 8-8v-40h25.37l48 48-39.03 39.03c-3.12 3.12-3.12 8.19 0 11.31l11.31 11.31c3.12 3.12 8.19 3.12 11.31 0L224 374.63l39.03 39.03c3.12 3.12 8.19 3.12 11.31 0l11.31-11.31c3.12-3.12 3.12-8.19 0-11.31L246.61 352c.01-.01 0 .03.01.01l39.04-39.04zM168 272h-40v-48h40c13.23 0 24 10.77 24 24s-10.77 24-24 24zM336 64h-88.58c.38-2.62.58-5.28.58-8 0-30.88-25.12-56-56-56s-56 25.12-56 56c0 2.72.21 5.38.58 8H48C21.49 64 0 85.49 0 112v352c0 26.51 21.49 48 48 48h288c26.51 0 48-21.49 48-48V112c0-26.51-21.49-48-48-48zM192 32c13.26 0 24 10.74 24 24 0 13.25-10.74 24-24 24s-24-10.75-24-24c0-13.26 10.74-24 24-24zm160 432c0 8.82-7.18 16-16 16H48c-8.82 0-16-7.18-16-16V112c0-8.82 7.18-16 16-16h48v20c0 6.63 5.37 12 12 12h168c6.63 0 12-5.37 12-12V96h48c8.82 0 16 7.18 16 16v352z"/></svg>
                            </div>
                            <div class="details">
                                <div class="title" id="preview-name">{{ name }}</div>
                                <div class="subtitle" id="preview-dose">{{ dose }}</div>
                            </div>
                        </div>
                        <div class="right">
                            <div class="details">
                                <div class="title">Valid Until</div>
                                <div class="subtitle" id="preview-date">{{ date }}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="medicate">
            <div class="field">
                <div class="title">Name</div>
                <input type="text" placeholder="Xanax" v-model="name">
            </div>
            <div class="field">
                <div class="title">Active Ingredient</div>
                <input type="text" placeholder="Alprazolam">
            </div>
            <div class="field wide">
                <div class="title">Type</div>
                <select>
                    <option value="1">Prescription</option>
                    <option value="1">Temporary</option>
                    <option value="1">As Needed</option>
                </select>
            </div>
            <div class="field">
                <div class="title">Dose per pill</div>
                <input type="number" placeholder="10" min="0.1" id="dose">
            </div>
            <div class="field">
                <div class="title">Pills per day</div>
                <input type="number" placeholder="1" min="1" id="count">
            </div>
            <div class="field">
                <div class="title">Pills Dispensed</div>
                <input type="number" placeholder="30" min="1">
            </div>
            <div class="field">
                <div class="title">Repeats Remaining</div>
                <input type="number" placeholder="5" min="0" max="5">
            </div>
            <div class="field">
                <div class="title">Started Taking</div>
                <input type="date" id="date">
            </div>
            <div class="field">
                <div class="title">Doctor's Notes</div>
                <textarea></textarea>
            </div>
            <div class="submit">
                <input type="submit" value="Submit">
            </div>
            <!-- <div class="field">
                <div class="title">Remaining Pills</div>
                <input type="number" value="0" disabled>
            </div> -->
        </div>
    </div>

    <script>

        var app = new Vue({
            el: "#preview",
            data: {
                name: "Xanax",
                dose: "10mg",
                date: "??.??.??"
            }
        });

        $("#name").on("keyup", function() {
            $("#preview-name").text($(this).val());
        });

        $("#dose").on("keyup", function() {
            var dose = Number($(this).val());
            var count = Number($("#count").val());
            if (!count) count = 1;
            $("#preview-dose").text((dose * count) + "mg");
        });

        $("#count").on("keyup", function() {
            var dose = Number($("#dose").val());
            var count = Number($(this).val());
            if (!dose) dose = 1;
            $("#preview-dose").text((dose * count) + "mg");
        });

        $("#date").on("keyup", function() {
            $("#preview-date").val($(this).val());
        })

    </script>

</body>
</html>